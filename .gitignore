# Salesforce cache
.sf/
.sfdx/
.localdevserver/
deploy-options.json

# LWC VSCode autocomplete
**/lwc/jsconfig.json

# LWC Jest coverage reports
coverage/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Dependency directories
node_modules/

# Eslint cache
.eslintcache

# MacOS system files
.DS_Store

# Windows system files
Thumbs.db
ehthumbs.db
[Dd]esktop.ini
$RECYCLE.BIN/

# Local environment variables
.env

# Python Salesforce Functions
**/__pycache__/
**/.venv/
**/venv/

# Ignore all Apex classes except these (edit as needed)
force-app/main/default/classes/*
!force-app/main/default/classes/DairyProductController.cls
!force-app/main/default/classes/DairyProductController.cls-meta.xml
!force-app/main/default/classes/InventoryController.cls
!force-app/main/default/classes/InventoryController.cls-meta.xml
!force-app/main/default/classes/RevenueController.cls
!force-app/main/default/classes/RevenueController.cls-meta.xml

!force-app/main/default/classes/SupplierController.cls
!force-app/main/default/classes/SupplierController.cls-meta.xml
!force-app/main/default/classes/ProductController.cls
!force-app/main/default/classes/ProductController.cls-meta.xml
!force-app/main/default/classes/ExpiryController.cls
!force-app/main/default/classes/ExpiryController.cls-meta.xml
# Ignore all Apex triggers except these (edit as needed)
force-app/main/default/triggers/*
!force-app/main/default/triggers/InventoryTrigger.trigger
!force-app/main/default/triggers/InventoryTrigger.trigger-meta.xml


